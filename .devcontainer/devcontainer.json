{
  "name": "Stats Lab - R + Jupyter",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-toolsai.jupyter-keymap",
        "ms-toolsai.jupyter-renderers",
        "REditorSupport.r",
        "reditorsupport.r-lsp"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "jupyter.notebookFileRoot": "${workspaceFolder}",
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },
  "forwardPorts": [8888],
  "remoteUser": "vscode",
  "postCreateCommand": "mkdir -p ~/R/library && echo 'R_LIBS_USER=\"~/R/library\"' >> ~/.Renviron && Rscript -e \"install.packages(c('ggplot2','dplyr','tidyr'), repos='https://cloud.r-project.org')\""
}
